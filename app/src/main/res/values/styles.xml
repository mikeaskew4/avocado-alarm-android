<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="CustomButtonStyle">
        <!-- Text properties -->
        <item name="android:fontFamily">@font/sora_semibold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!-- Define colors for your app -->
    <color name="colorPrimary">#315624</color> <!-- Avocado green -->
    <color name="colorPrimaryDark">#213d17</color> <!-- Darker avocado green -->
    <color name="colorAccent">#FFC107</color> <!-- Amber for accents, you can choose your color -->

    <!-- More styles can be added here as required. For example, if you want custom styles for buttons, text views, etc. -->

</resources>
