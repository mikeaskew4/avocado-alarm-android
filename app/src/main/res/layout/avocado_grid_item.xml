<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    android:clipToOutline="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@color/colorBackgroundSecondary">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="4dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">
            <ImageView
                android:id="@+id/avocado_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:outlineProvider="background"
                android:contentDescription="@string/avocado_thumbnail"
                />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:paddingHorizontal="12dp"
            android:minHeight="72dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/avocado_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/avocado_name_placeholder"
                    android:fontFamily="@font/sora_semibold"
                    android:textStyle="normal"
                    android:textSize="13sp"
                    android:textColor="@color/colorTextBody"
                    android:paddingRight="4dp"
                    android:maxLines="2"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/avocado_creation_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/creation_date_placeholder"
                    android:fontFamily="@font/sora"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="@color/colorTextBodyLight" />

            </LinearLayout>

            <com.michaelaskew.avocadotimer.views.CircleChartView
                android:id="@+id/circleChartView"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
