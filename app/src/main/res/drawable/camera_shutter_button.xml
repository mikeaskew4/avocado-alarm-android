<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background circle -->
    <item>
        <shape android:shape="oval">
            <!-- Background properties can go here if needed -->
        </shape>
    </item>
    <!-- Foreground stroke that changes based on state -->
    <item>
        <selector>
            <!-- Pressed state -->
            <item android:state_pressed="true">
                <shape android:shape="oval">
                    <stroke android:width="8dp" android:color="#aaaaaa" />
                </shape>
            </item>
            <!-- Default state -->
            <item>
                <shape android:shape="oval">
                    <stroke android:width="6dp" android:color="#ffffff" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>
